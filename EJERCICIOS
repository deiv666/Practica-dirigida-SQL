1) SELECT NOMBRE, FECHA_CONTRATO, SALARIO, NOMBRE, NAME_DEPARTAMENTO, ROL
FROM EMPLEADO
WHERE SALARIO >=4500 AND SALARIO < 15000;

2) SELECT CODIGO, NOMBRE, PAIS
FROM EMPLEADO
WHERE ROL = 'Accountant'; 

3) SELECT E.NOMBRE || ' ' || E.APELLIDO E,
FROM EMPLEADO E
RIGHT JOIN EMPLEADO E
ON LOCATION.E = 'Mexico City' OR  LOCATION.E = 'United States'
WHERE  LOCATION.EMEX, LOCATION.EUSA IS NOT NULL;

4) SELECT E.NOMBRE || ' ' || E.APELLIDO E
FROM EMPLEADO E
RIGHT JOIN EMPLEADO E
ON LOCATION.E = 'United Kingdom'
WHERE  LOCATION.E IS NOT NULL;

5) SELECT NOMBRE, APELLIDO
FROM EMPLEADO
WHERE LOCACION = 'Americas' AND SALARIO => SALARIO_PROMEDIO;

6) SELECT REGION, PAIS, SUM(SALARIO)
FROM EMPLEADO
